# OOPs Concept use in Python
class Simple_ATM:
    def __init__(self):
        PIN="1234"
        Attempts=0
        Balance=1000
        self.PIN=PIN
        self.Attempts=Attempts
        self.Balance=Balance

    def login(self):
        while self.Attempts<3:
            user=input("Enter your PIN: ")
            if user==self.PIN:
                print("Correct PIN, You Are Login Successfully ")
                self.initial_menu()
                return True
            else:
                self.Attempts+=1
                print(f"Remaining Attempts: {3-self.Attempts}")
        print("Account Locked ")
        return False
    
    def initial_menu(self):
        print("1.Proceed To Menu")
        print("2. Closed | Exit")
        user1=input("Enter your Choice: ")
        if user1=='1':
            self.show_manu()
            return True
        elif user1=='2':
            print("Thanks for Visiting, Good Bye!")
            exit()
        else:
            print("Invalid Choice. ")
            exit()

    def show_manu(self):
        while True:
            print("Welcome To Simple ATM")
            print("1. Check Balance")
            print("2. Deposite Money")
            print("3. Withdrawal Money")
            print("4. Exit")
            user2=input("Enter your Choice: ")
            if user2=='1':
                self.check_balance()
            elif user2=='2':
                self.Deposite()
            elif user2=='3':
                self.Withdrawal()
            elif user2=='4':
                print("Thanks for using Simple ATM ")
                exit()
            else:
                print("Invalid Choice. ")
                exit()

    def check_balance(self):
        print(f" Your Current Balance is : {self.Balance}")

    def Deposite(self):
        am=int(input("Enter your Deposite amount: "))
        if am<=0:
            print("Invalid Amount. ")
        else:
            self.Balance+=am
            print(f"New Amount: {self.Balance}")

    def Withdrawal(self):
        wm=int(input("Enter your Withdrawal amount: "))
        if wm<=0:
            print("Invalid Amount. ")
        else:
            self.Balance-=wm
            print(f"New Amount: {self.Balance}")

ATM=Simple_ATM()
if ATM.login():
    ATM.show_manu()